  <query>
    SELECT *,
    (select employee_employeename from tbl_employee WHERE employee_employeeid=invoice_leadbyid) as employee_employeename1,
    (select employee_employeename from tbl_employee WHERE employee_employeeid=invoice_advisorybyid) as employee_employeename2
    ,
    (select employee_employeename from tbl_employee WHERE employee_employeeid=invoice_meeting1id) as employee_employeename3
    ,
    (select employee_employeename from tbl_employee WHERE employee_employeeid=invoice_meeting2id) as employee_employeename4
    ,
    (select employee_employeename from tbl_employee WHERE employee_employeeid=invoice_closedbyid) as employee_employeename5
    ,
    (select employee_employeename from tbl_employee WHERE employee_employeeid=invoice_employeeid) as employee_employeename6

    FROM tbl_invoice
    LEFT JOIN tbl_client ON client_clientid=invoice_clientid
    LEFT JOIN tbl_setupfortermsandcondition ON setupfortermsandcondition_setupfortermsandconditionid=invoice_setupfortermsandconditionid
    LEFT JOIN tbl_subscription ON subscription_subscriptionid=invoice_subscriptionid
    LEFT JOIN tbl_proformainvoice ON proformainvoice_proformainvoiceid=invoice_proformainvoiceid
    LEFT JOIN tbl_state ON state_stateid=invoice_stateid
    LEFT JOIN tbl_employee ON employee_employeeid=invoice_employeeid
    LEFT JOIN tbl_invoicestatus ON invoicestatus_invoicestatusid=invoice_invoicestatusid
    
  </query>
  <where>
    ('$invoice_clientid$' = '0' OR invoice_clientid = '$invoice_clientid$') AND
    ('$invoice_invoicestatusid$' = '0' OR invoice_invoicestatusid = '$invoice_invoicestatusid$')
    AND invoice_invoicedate BETWEEN '$invoice_invoicedate_from$' AND '$invoice_invoicedate_to$'
    AND invoice_periodfrom BETWEEN '$invoice_periodfrom_from$' AND '$invoice_periodfrom_to$'
    AND invoice_periodto BETWEEN '$invoice_periodto_from$' AND '$invoice_periodto_to$'
  </where>
